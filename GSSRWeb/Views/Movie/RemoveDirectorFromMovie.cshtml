<link href="~/Content/styling.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Confirm removing Director";
}

<h2>Are you sure you want to remove @ViewBag.directorName from @ViewBag.movieName ?</h2>
<div>
    <hr />

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Remove" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "GetAllMovies")
        </div>
    }
</div>
