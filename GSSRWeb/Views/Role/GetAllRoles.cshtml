@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>
<link href="~/Content/styling.css" rel="stylesheet" type="text/css" />

@{
    ViewBag.Title = "Add Role";
}
<table style=" background-color:#FFFFFF; border: dashed 3px #6D7B8D; padding: 5px;width: 99%;table-layout:fixed;" cellpadding="6" cellspacing="6">
    <tr style="height: 30px; background-color:#336699 ; color:#FFFFFF ;border: solid 1px #659EC7;">
        <td align="center" colspan="2">
            <h2> All roles</h2>
        </td>

    </tr>

    <tr>
        <td>
            <table id="tbrole" style="width:100%; border:dotted 1px; background-color:gainsboro; padding-left:10px;">

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:70%; border:dotted 1px;">
                            @Html.ActionLink(item.Name, "Edit", new { id = item.Id })
                        </td>
                        <td align="center">
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>}
            </table>
        </td>
        <td align="center" style="color:#FFFFFF;padding-right:10px;">


            <h5>   @Html.ActionLink("Click to Create New Role", "Create", "Role") </h5>
        </td>
    </tr>
</table> 